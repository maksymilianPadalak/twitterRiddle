generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Riddle {
  id        String @id @default(cuid())
  riddle    String
  answer    String
  isPosted  Boolean @default(false)
  isSolved  Boolean @default(false)
  createdAt DateTime @default(now())
}

model Winner {
  id        String @id @default(cuid())
  riddleId  String
  userId    String
  username  String
  createdAt DateTime @default(now())
}
